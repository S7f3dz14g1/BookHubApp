<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    tools:src="@color/colorWhite"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="5dp">

        <ImageView
            android:id="@+id/reading_item_list_image"
            android:layout_width="110dp"
            android:layout_height="160dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/reading_item_list_textView_title"
            android:layout_width="286dp"
            android:layout_height="29dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toEndOf="@+id/reading_item_list_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/reading_item_list__textView_borrowed"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="8dp"
            android:text="@string/borrowed"
            android:textColor="@color/colorSecondaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/reading_item_list_image"
            app:layout_constraintTop_toBottomOf="@+id/reading_item_list_textView_title" />

        <TextView
            android:id="@+id/reading_item_list_textView_timeAgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/how_much_days_ago"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toEndOf="@+id/reading_item_list_image"
            app:layout_constraintTop_toBottomOf="@+id/reading_item_list__textView_borrowed" />

        <TextView
            android:id="@+id/reading_item_list_textView_dateOfBorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/yyyy_mm_dd"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.871"
            app:layout_constraintStart_toEndOf="@+id/reading_item_list_image"
            app:layout_constraintTop_toBottomOf="@+id/reading_item_list_textView_title" />

        <TextView
            android:id="@+id/reading_item_list_textView_dateOfBorrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/yyyy_mm_dd"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.836"
            app:layout_constraintStart_toStartOf="@+id/reading_item_list_textView_timeAgo"
            app:layout_constraintTop_toBottomOf="@+id/reading_item_list_textView_dateOfBorrow" />

        <TextView
            android:id="@+id/reading_item_list_button_extend_book"
            android:layout_width="150dp"
            android:layout_height="33dp"
            android:text="@string/extend_book_rental"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryBlue"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.971"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.944" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

