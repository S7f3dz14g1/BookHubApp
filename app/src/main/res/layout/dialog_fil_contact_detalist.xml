<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@drawable/dialog_style"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fil_contact_details_text_view"
        android:layout_width="311dp"
        android:layout_height="164dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:text="@string/if_you_want_to_borrow_a_book_complete_the_contact_details_do_you_want_to_refill_now"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryBlue"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fil_contact_details_cancel"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_primary"
        android:textColor="@color/colorPrimaryBackground"
        android:text="@string/no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fil_contact_details_text_view"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/fil_contact_details_comlpete"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_primary"
        android:textColor="@color/colorPrimaryBackground"
        android:text="@string/yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fil_contact_details_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>